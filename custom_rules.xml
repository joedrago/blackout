<project name="Blackout" default="help">
    <target name="-pre-compile">
        <exec executable="npm" failonerror="true">
            <arg value="run"/>
            <arg value="build"/>
        </exec>
    </target>
    <target name="run">
        <exec executable="adb">
            <arg value="shell"/>
            <arg value="am"/>
            <arg value="start"/>
            <arg value="-a"/>
            <arg value="android.intent.action.MAIN"/>
            <arg value="-n"/>
            <arg value="com.jdrago.blackout/.BlackoutActivity"/>
        </exec>
    </target>
</project>
